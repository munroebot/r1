export MYSQL_HOME=/usr/local/mysql-5.0.51b-osx10.4-i686
export CATALINA_HOME=/Users/brian/apache-tomcat-6.0.24
export GRAILS_HOME=/Users/brian/grails-1.2.1

export EDITOR=nano

export PATH=/usr/local/git/bin:/usr/local/bin:$GROOVY_HOME/bin:$GRAILS_HOME/bin:$PATH

alias ls='ls -G'
alias apg='apg -M SNCL'

PASSWORD_TXT="$HOME/r1/passwords.txt"
PASSWORD_TXT_ASC="$HOME/r1/moonshine-recipe.txt.asc"
alias psc="gpg  -i -a -c --cipher-algo AES256 $PASSWORD_TXT"
alias psd="gpg --decrypt -o $PASSWORD_TXT $PASSWORD_TXT_ASC ; $EDITOR $PASSWORD_TXT ; psc ; rm -f $PASSWORD_TXT"
alias greppw="gpg --decrypt $PASSWORD_TXT_ASC | grep -i --color=auto -C 4 $1"

alias backup_home="rsync -a --delete --progress --stats ./brian/ /Volumes/New\ Volume/"

export CATALINA_OPTS="-XX:+HeapDumpOnOutOfMemoryError \
                      -Xms512m -Xmx512m \
                      -Dcom.sun.management.jmxremote \
                      -Dcom.sun.management.jmxremote.port=8614 \
                      -Dcom.sun.management.jmxremote.ssl=false \
                      -Dcom.sun.management.jmxremote.authenticate=false"